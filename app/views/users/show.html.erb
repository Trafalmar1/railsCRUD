<h1><%= @user.username%></h1>

<p><%= @user.email%></p>

<ul>
    <li><%= link_to "Edit", edit_user_path(@user)%></li>
    <li><%= link_to "Destroy", user_path(@user), method: :delete, data:{confirm: "Are you sure?"}%></li>
    <li><a href="/users">Go back</a></li>
</ul>

<h2>Profiles:</h2>
<%= render @user.profiles%>

<h2>Add a profile:</h2>
<%= render 'profiles/form'%>
